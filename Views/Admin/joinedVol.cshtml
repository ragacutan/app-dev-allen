@model IEnumerable<SEE_TURTLES_WEB_APP_FINAL.Models.JoinProperty>

@{
    ViewBag.Title = "Joined Volunteer";
    Layout = "~/Views/Shared/_adminDashboard.cshtml";
}

@if (Session["emailid"] != null)
{
    <body>
        <div class="sidebar">
            <div class="logo-details">
                <div class="row-merch">

                    <img src="~/ImgAdmin/curma-logo.png">

                </div>
            </div>
            <ul class="nav-links">
                <li>
                    <a onclick="location.href='@Url.Action("dashboard", "Admin")'">
                        <i class='bx bx-grid-alt'></i>
                        <span class="links_name">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a onclick="location.href='@Url.Action("volunteerList", "Admin")'">
                        <i class='bx bx-box'></i>
                        <span class="links_name">Volunteers</span>
                    </a>
                </li>
                <li>
                    <a onclick="location.href='@Url.Action("Nesting", "Admin")'">
                        <i class='bx bx-list-ul'></i>
                        <span class="links_name">Nesting</span>
                    </a>
                </li>
                <li>
                    <a onclick="location.href='@Url.Action("Hatchling", "Admin")'">
                        <i class='bx bx-list-ul'></i>
                        <span class="links_name">Hatchling</span>
                    </a>
                </li>
                <li>
                    <a onclick="location.href='@Url.Action("AddEvent", "Admin")'">
                        <i class='bx bx-message'></i>
                        <span class="links_name">Activities</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class='bx bx-message'></i>
                        <span class="links_name">Trainings</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class='bx bx-message'></i>
                        <span class="links_name">Awareness</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class='bx bx-message'></i>
                        <span class="links_name">News</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class='bx bx-message'></i>
                        <span class="links_name">Merchandise</span>
                    </a>
                </li>
                <li class="log_out">
                    <a onclick="myFunction()">
                        <i class='bx bx-log-out'></i>
                        <span class="links_name">Log out</span>
                    </a>
                </li>
            </ul>
        </div>
        <section class="home-section">
            <nav>
                <div class="search-box">
                    <input type="text" placeholder="Search here...">
                    <i class='bx bx-search'></i>
                </div>
                <div class="profile-details">
                    <img src="~/ImgAdmin/admin_profile.png" alt="">
                    <span class="admin_name">@Html.ViewData["AdminName"]</span>
                    <i class='bx bx-chevron-down'></i>
                </div>
            </nav>
            <div class="home-content">
                <div class="row-admin">
                    <div class="column-admin-1">
                        <h1>Joined Volunteers</h1>
                        <p>Hi, <span style="text-decoration: underline;">@Html.ViewData["AdminName"]</span>! Welcome to CURMA Volunteers!.</p>
                    </div>
                    <div class="column-admin-2">
                        <div class="box-title">
                            <a onclick="location.href='@Url.Action("AddEvent", "Admin")'"><p>Add Event</p></a>
                        </div>
                    </div>
                    <div class="column-admin-3">
                        <div class="box-title">
                            <a onclick="location.href='@Url.Action("joinedVol", "Admin")'"><p>Joined List</p></a>
                        </div>
                    </div>
                </div>
                <div class="row-event-first">
                    <div class="box-container">

                        @foreach (var item in Model)
                        {
                            <div class="box">
                                <div class="image">
                                    <img src="~/ImgNew/turtle3.jpeg" alt="">
                                </div>
                                <div style="background-color: #70CBCF;" class="content">
                                    <h2 style="color: white;">Captive Breeding and Rehabilitation Training</h2>
                                </div>
                                <div class="content">
                                    <div class="place">
                                    </div>
                                    <p style="color: black;">
                                        Many turtle conservation organizations operate captive breeding programs and rehabilitation centers for injured or sick turtles
                                    </p>
                                    <div class="title">
                                        <h3>Name:   @Html.DisplayFor(modelItem => item.Email)</h3>
                                    </div>
                                    <p>
                                        Address: @Html.DisplayFor(modelItem => item.Address)
                                    </p>
                                    <div class="title">
                                        <h3>Contact Person</h3>
                                    </div>
                                    <p>
                                        Name: @Html.DisplayFor(modelItem => item.EmergencyName)
                                    </p>
                                    <p>
                                        Address: @Html.DisplayFor(modelItem => item.EmergencyAddress)
                                    </p>
                                    <p>
                                        Contact Numnber: @Html.DisplayFor(modelItem => item.EmergencyMobile)
                                    </p>
                                    <p>
                                        Relationship: @Html.DisplayFor(modelItem => item.EmergencyRelation)
                                    </p>
                                    <a style="margin-bottom: 20px;" href="#" class="btn-section-content">Details</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
        <script>
        function myFunction() {
        if (confirm("Are You Sure You Want to Logout?")) {
        var url = "@Url.Action("LoginPage", "Admin")";
        window.location.href = url;
            }
        }
        window.history.forward();
        function noBack() { window.history.forward(); }
        </script>
    </body>
}