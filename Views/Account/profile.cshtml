@model SEE_TURTLES_WEB_APP_FINAL.Models.VolunteerProperty

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_profile.cshtml";
}

@if (Session["emailid"] != null)
{
    <section class="profile">
        <div class="title">
            <h1>User Profile</h1>
        </div>
        <div class="row-profile">
            <div class="column-profile-1">
                <div class="profile-image-box">
                    <img src="~/img/profile-image.png" alt="" />
                </div>
                <div class="profile-name">
                    <h2>@Html.ViewData["Firstname"] @Html.ViewData["Lastname"]</h2>
                </div>
                <div class="profile-button-1">
                    <a class="btn-profile" onclick="location.href='@Url.Action("UpdateProfile", "Account")'">edit profile details</a>
                </div>
                <div class="profile-button-2">
                    <a class="btn-profile">change password</a>
                </div>
            </div>
            <div class="column-profile-2">
                <h2>User Details</h2>
                <table class="table table-user-information">
                    <tbody>
                        <tr>
                            <td>Name: </td>
                            <td>@Html.ViewData["Firstname"] @Html.ViewData["Lastname"]</td>
                        </tr>
                        <tr>
                            <td>Address: </td>
                            <td>@Html.ViewData["Homeaddress"]</td>
                        </tr>
                        <tr>
                            <td>Sex: </td>
                            <td>@Html.ViewData["Sex"]</td>
                        </tr>
                        <tr>
                            <td>Age: </td>
                            <td>@Html.ViewData["Age"] years old</td>
                        </tr>
                        <tr>
                            <td>Organization: </td>
                            <td>@Html.ViewData["Organization"]</td>
                        </tr>
                        <tr>
                            <td>Email Address: </td>
                            <td>@Session["emailid"].ToString()</td>
                        </tr>
                        <tr>
                            <td>Phone Number: </td>
                            <td>@Html.ViewData["Contact"]</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
}
